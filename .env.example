# WaveSite 1.1 Environment Configuration

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# Instagram Credentials
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# TikTok Credentials (optional)
TIKTOK_USERNAME=your_tiktok_username
TIKTOK_PASSWORD=your_tiktok_password

# Optional: OpenAI API for visual content analysis
# Enables AI-powered extraction when CSS selectors fail
OPENAI_API_KEY=your_openai_api_key

# Server Configuration
PORT=3000
NODE_ENV=development

# Debug Mode (optional)
# Set to true to enable verbose logging and screenshot capture
DEBUG=false

# Bot Configuration
MAX_CONCURRENT_BOTS=5
BOT_TIMEOUT_MS=300000
SCROLL_DELAY_MIN=2000
SCROLL_DELAY_MAX=5000

# Competitors (comma-separated list for tracking)
COMPETITORS=competitor1,competitor2,competitor3

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/wavesite.log